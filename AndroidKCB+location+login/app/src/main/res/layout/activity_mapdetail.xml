<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testlocation.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_class"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:text="TextView" />

        <Button
            android:layout_below="@id/tv_class"
            android:id="@+id/bt_mapdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_mapdetail"/>

        <Button
            android:id="@+id/bt_mapdetailexit"
            android:layout_below="@id/bt_mapdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_mapdetailexit"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>